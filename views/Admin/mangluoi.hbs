<script>
    $("#close-add-article").click(function () {
        $(".add-article-mangluoi").css("display", "none");
        $(".wrap-content").css("opacity", "1");
        $(".add-button").css("z-index", "1");
    });
    $("#add-button").click(function () {
        $(".add-article-mangluoi").css("display", "block");
        $(".wrap-content").css("opacity", "1");
        $(".add-button").css("z-index", "-1");
    });
    $(".deleteCategory").click(function () {
        var cButton = $(this);
        var id = $(this).attr('idArticle');
        $.ajax({
            type: "POST",
            success: function (result) {
                if (result == 'success')
                    cButton.parent().parent().remove();
                else {
                    alert(result);
                }

            },
            url: "mang-luoi/delete",
            data: { id: id },
        });
    });

</script>

<script>
    $("#mang-luoi").addClass( "active" );
</script>